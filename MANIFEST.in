# Include Mojo source files
recursive-include src *.mojo

# Include compiled Mojo binary if it exists (for binary distributions)
include vectro_quantizer
include vectro_quantizer.exe

# Include Cython source files
include src/*.pyx
include src/*.pxi

# Include documentation
include README.md
include LICENSE
include NEXT_STEPS.md

# Include configuration files
include pyproject.toml
include requirements.txt

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
